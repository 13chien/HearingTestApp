<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/menu"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/help"
        android:textSize="35dp" 
        android:layout_below="@+id/help"
        android:text="Help"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/instruct1"
        android:layout_alignRight="@+id/test"
        android:text="Start Test"
        android:textSize="35dp" 
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/instruct1"
        android:layout_alignLeft="@+id/results"
        android:text="View results"
        android:textSize="35dp" 
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <TextView
        android:id="@+id/instruct2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instruct1"
        android:layout_below="@+id/instruct1"
        android:layout_marginTop="32dp"
        android:text="Press Start test to begin testing"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="45dp" />

    <ImageButton
        android:id="@+id/test"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="119dp"
        android:background="@drawable/test"
        android:onClick="test" />

    <TextView
        android:id="@+id/instruct3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/instruct2"
        android:layout_below="@+id/instruct2"
        android:layout_marginTop="45dp"
        android:text="Press View results to get results"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="45dp" />

     <ImageButton
         android:id="@+id/mail"
         android:layout_width="600dp"
         android:layout_height="300dp"
         android:layout_below="@+id/instruct3"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="87dp"
         android:background="@drawable/mail"
         android:onClick="another" />

     <ImageButton
         android:id="@+id/results"
         android:layout_width="165dp"
         android:layout_height="165dp"
         android:layout_above="@+id/textView3"
         android:layout_alignRight="@+id/mail"
         android:background="@drawable/results"
         android:onClick="results" />

     <ImageButton
         android:id="@+id/help"
         android:layout_width="165dp"
         android:layout_height="165dp"
         android:layout_alignLeft="@+id/mail"
         android:layout_alignTop="@+id/test"
         android:background="@drawable/help"
         android:onClick="steps" />

     <TextView
         android:id="@+id/instruct1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_below="@+id/textView1"
         android:layout_centerHorizontal="true"
         android:layout_marginTop="98dp"
         android:text="Press help button for instructions"
         android:textAppearance="?android:attr/textAppearanceMedium"
         android:textSize="45dp" />

</RelativeLayout>